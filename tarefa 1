#include <iostream>
using namespace std;

int main(){
  int mat_1 [2][2], mat_2 [2][2];
  int result [2][2];

  cout << "Digite todos os elementos da matriz 1: " << endl;
  for(int i = 0; i < 2; i++){
    for(int j = 0; j < 2; j++){
      cin >> mat_1[i][j];
    }
  }
  cout << "Digite todos os elementos da matriz 2: " << endl;
  for(int i = 0; i < 2; i++){
    for(int j = 0; j < 2; j++){
      cin >> mat_2[i][j];
    }
  }
  for(int i = 0; i < 2; i++){
    for(int j = 0; j < 2; j++){
      result[i][j] = mat_1[i][j] + mat_2[i][j];
    }
  }
  cout << "A soma das matrizes Ã©: " << endl;
  for(int i = 0; i < 2; i++){
    for(int j = 0; j < 2; j++){
      cout << result[i][j] << " ";
    }
  }
  return 0;
}
